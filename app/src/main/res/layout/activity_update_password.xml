<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyCenterPage.UpdatePasswordActivity">
    <LinearLayout
        android:id="@+id/add_com_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <Button
            android:id="@+id/add_com_msg_back"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@mipmap/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="20"
            android:gravity="center"
            android:textColor="#3d3d3d"
            android:textSize="20sp"
            android:text="填写商品信息"
            />
        <ImageView
            android:id="@+id/com_details_enjoy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColorHint="#5d5d5d"
            android:layout_margin="10dp"
            android:hint="输入密码"
            android:textSize="18sp"
            android:background="#efefef"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textColorHint="#5d5d5d"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:hint="确认密码"
            android:textSize="18sp"
            android:background="#efefef"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:background="@drawable/blue_enter_btn"
            />
    </LinearLayout>
</LinearLayout>