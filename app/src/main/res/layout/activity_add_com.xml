<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e9e9e9"
    android:orientation="vertical"
    tools:context=".ShoppingCarPage.AddComActivity">
    <LinearLayout
        android:id="@+id/add_com_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/com_details_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="20"
            android:gravity="center"
            android:textColor="#3d3d3d"
            android:textSize="20sp"
            android:text="填写商品信息"
            />
        <ImageView
            android:id="@+id/com_details_enjoy"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:layout_margin="10dp"
            android:src="@mipmap/send_post"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_com_top"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:text="1.发布图片"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/add_com_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/main_my"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:layout_margin="10dp"
                android:text="*上传与商品无关的图片将无法审核通过"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_margin="10dp"
                android:text="2.填写商品描述"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_marginTop="2dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="    *商品名称"
                            />
                        <EditText
                            android:id="@+id/add_com_name"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="10dp"
                            android:layout_weight="10"
                            android:background="@null"
                            android:text="G11"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="    *操作系统"
                            />
                        <Spinner
                            android:id="@+id/add_com_operating"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="17dp"
                            android:layout_weight="10"
                            android:entries="@drawable/main_my"
                            android:text="安卓"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="    *商品类型"
                            />
                        <EditText
                            android:id="@+id/add_com_type"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="10"
                            android:background="@null"
                            android:textSize="17dp"
                            android:text="自抽号"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="    *服务器    "
                            />
                        <Spinner
                            android:id="@+id/add_com_server"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="20dp"
                            android:textSize="17dp"
                            android:layout_weight="10"
                            android:text="格里芬"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="     商品内容"
                            />
                        <EditText
                            android:id="@+id/add_com_content"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_marginEnd="20dp"
                            android:background="@null"
                            android:textSize="17dp"
                            android:layout_weight="10"
                            android:text="11容"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="     使用方式"
                            />
                        <EditText
                            android:id="@+id/add_com_method"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:textSize="17dp"
                            android:background="@null"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="10"
                            android:text="登陆即可"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="17dp"
                            android:layout_weight="2"
                            android:text="     特别方式"
                            />
                        <EditText
                            android:id="@+id/add_com_special"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:background="@null"
                            android:textSize="17dp"
                            android:layout_marginEnd="20dp"
                            android:layout_weight="10"
                            android:text="1111111111111111111111111111111111111111111111111111111111111111111111"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#228df9"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:text="下一步"
        />
</RelativeLayout>