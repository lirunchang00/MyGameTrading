<?xml version="1.0" encoding="utf-8"?>
<!--每一行-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp"
    android:layout_height="280dp"
    android:layout_weight="1"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/corners_bg"
    android:gravity="center"
    android:orientation="horizontal">
    <!--每一个商品-->
    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:background="@drawable/corners_bg"
        android:orientation="vertical">
        <!--商品展示图-->
        <ImageView
            android:id="@+id/goods_image"
            android:layout_width="160dp"
            android:layout_height="170dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@mipmap/powdered_milk" />
        <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="30dp"-->
        <!--android:orientation="horizontal">-->
        <TextView
            android:id="@+id/goods_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:textColor="#000000"
            android:text="奶粉"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/goods_introduction_tv"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="澳大利亚 进口奶粉 德运 （Devondale）调制乳粉（全脂）成人奶粉 1kg 袋装"
            android:textSize="13sp" />
        <!--</LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">
            <!--价格-->
            <TextView
                android:id="@+id/good_price_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥69.00"
                android:textColor="#ff0000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right">

                <!--销量-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="3"
                    android:textSize="11sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="信誉度:"
                    android:textSize="11sp" />
                <TextView
                    android:id="@+id/goods_salesvolume_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200"
                    android:textSize="11sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
