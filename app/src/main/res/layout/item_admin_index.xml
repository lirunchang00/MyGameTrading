<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/admin_item_father_"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:alpha="0.8"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/admin_girls_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/main_my"
            />
        <ImageView
            android:id="@+id/admin_girls_type_pic"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:maxLines="1"
            android:src="@mipmap/rf"
            android:layout_gravity="center"
            android:background="@drawable/girls_underline"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/admin_girls_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/girls_underline"

            android:gravity="center"
            android:maxLines="1"
            android:text="No.265"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/admin_girls_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textSize="14sp"

            android:layout_gravity="center"
            android:gravity="center"
            android:text="侦察者"
            />
        <Button
            android:id="@+id/admin_delete"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@drawable/blue_enter_btn"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="删除"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>