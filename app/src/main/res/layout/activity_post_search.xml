<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForumPage.PostSearchActivity">
    <LinearLayout
        android:id="@+id/post_search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/btn_frame"
        >
        <ImageView
            android:id="@+id/post_search_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@mipmap/back"
            />
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/post_search_editText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:hint="请输入搜索内容"
                android:background="@null"
                android:maxLength="10"
                android:layout_marginTop="5dp"
                android:paddingLeft="15dp"
                android:singleLine="true"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/post_search_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:paddingRight="20dp"
                android:src="@mipmap/close"
                android:visibility="gone" />

        </RelativeLayout>
        <ImageView
            android:id="@+id/post_search_enter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:background="@mipmap/search"
            />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/post_search_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>