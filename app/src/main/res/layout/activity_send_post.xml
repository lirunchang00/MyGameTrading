<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForumPage.SendPostActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fdf8e3"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#292929"
            >
            <Button
                android:id="@+id/send_post_back"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:layout_marginStart="5dp"
                android:background="@mipmap/back"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="20"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:text="发帖"
                />
            <Button
                android:id="@+id/send_post"
                android:layout_width="30dp"
                android:layout_height="35dp"
                android:layout_weight="2"
                android:layout_margin="10dp"
                android:background="@mipmap/send_post"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            >
            <EditText
                android:id="@+id/send_post_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="20"
                android:textColor="#4d4d4d"
                android:textSize="20sp"
                android:hint="请输入标题"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            >
            <EditText
                android:id="@+id/send_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="20"
                android:textColor="#4d4d4d"
                android:gravity="left|top"
                android:textSize="20sp"
                android:minLines="10"
                android:hint="请输入内容"
                />
        </LinearLayout>
        <Button
            android:id="@+id/send_post_sle_pic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@mipmap/pic"
            />
        <ImageView
            android:id="@+id/send_post_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>