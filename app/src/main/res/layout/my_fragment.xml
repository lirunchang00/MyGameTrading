<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    >
    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="#ffffff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#242424"
                    android:textSize="20sp"
                    android:text="我的信息"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                >
                <ImageView
                    android:id="@+id/my_head"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:src="@mipmap/my_blank"
                    android:background="#dfdfdf"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                <TextView
                    android:id="@+id/my_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="3dp"
                    android:textSize="18sp"
                    android:textColor="#414040"
                    android:text="匿名用户"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:text="活跃度:"
                        />
                    <TextView
                        android:id="@+id/active"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        />
                </LinearLayout>

                 <TextView
                     android:id="@+id/myIntroduction"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:text="自我介绍"
                     android:textSize="18sp"
                     android:layout_marginStart="10dp"
                     />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/update_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的资料"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/update_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="修改密码"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的帖子"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_repeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的回复"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_post_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="论坛收藏"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_solder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="6dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的卖家"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_com_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="商品收藏"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/my_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginTop="2dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="我的订单"
                    />
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="23dp"
                    android:layout_margin="10dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center"
                    android:background="@mipmap/returnback"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/login_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ffffff">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#707070"
            android:layout_alignParentBottom="true"
            android:textSize="20sp"
            android:text="登录注册"
            />
    </LinearLayout>
</RelativeLayout>
